@article{lootens2016,
  title = {High-Throughput Phenotyping of Lateral Expansion and Regrowth of Spaced {{Lolium}} Perenne Plants Using on-Field Image Analysis},
  author = {Lootens, Peter and Ruttink, Tom and Rohde, Antje and Combes, Didier and Barre, Philippe and Roldán-Ruiz, Isabel},
